<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content" xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_view"
android:layout_margin="5dp"
card_view:cardBackgroundColor="#D8E2DE"
card_view:cardCornerRadius="12dp"
card_view:cardElevation="3dp"
card_view:contentPadding="4dp">

<ImageView
        android:id="@+id/seriePoster"
        android:layout_width="140dp"
        android:layout_height="149dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:contentDescription="Poster of the movie"/>

<LinearLayout
        android:layout_width="249dp"
        android:layout_height="148dp"
        android:layout_gravity="right|bottom"
        android:padding="16dp"
        android:orientation="vertical">

    <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            tools:text="Serie Name"/>
    <TextView
            android:id="@+id/overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Description"/>
    <TextView
            android:id="@+id/first_air_date"
            android:layout_width="82dp"
            android:layout_height="22dp"
            tools:text="@tools:sample/date/ddmmyy"
            android:textSize="30sp"/>

</LinearLayout>
</androidx.cardview.widget.CardView>